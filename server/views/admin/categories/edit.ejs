<div class="container pt-3 pb-3">
  <h2 class="mb-3">Chỉnh sửa Category</h2>
  <form id="updateForm" action="/admin/categories/<%=category.id %>">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Chỉnh sửa Category</h3>

            <div class="card-tools">
              <button
                type="button"
                class="btn btn-tool"
                data-card-widget="collapse"
                title="Collapse"
              >
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="inputName">Tên loại</label>
              <input
                type="text"
                id="inputName"
                name="name"
                class="form-control"
                value="<%=category.name %>"
              />
            </div>
            <div class="form-group">
              <label>Ảnh: </label> <br />
              <span
                ><img
                  src="<%=category.image %> "
                  style="width: 80px; height: 65px"
              /></span>
              <input type="file" id="inputImage" />
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <a href="/admin/categories" class="btn btn-secondary">Quay lại</a>
        <input type="submit" class="btn btn-success float-right" />
      </div>
    </div>
  </form>
</div>
