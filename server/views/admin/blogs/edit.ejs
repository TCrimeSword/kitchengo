<div class="container pt-3 pb-3">
  <h2 class="mb-3">Chỉnh sửa Blog</h2>
  <form id="updateForm" action="admin/blogs/<%=blog.id %> ">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Chỉnh sửa Blog</h3>

            <div class="card-tools">
              <button
                type="button"
                class="btn btn-tool"
                data-card-widget="collapse"
                title="Collapse"
              >
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label for="inputName">Tiêu đề</label>
              <input
                type="text"
                id="inputName"
                name="title"
                class="form-control"
                value="<%=blog.title %>"
              />
            </div>
            <div class="form-group">
              <label for="editor1">Nội dung</label>
              <textarea id="editor1" rows="10" cols="80">
                <%=blog.content %>  
              </textarea>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <a href="/admin/blogs" class="btn btn-secondary">Quay lại</a>
        <input
          type="submit"
          value="Chỉnh sửa"
          class="btn btn-success float-right"
        />
      </div>
    </div>
  </form>
</div>
<script>
  // Replace the <textarea id="editor1"> with a CKEditor 4
  // instance, using default configuration.
  CKEDITOR.replace('editor1');
  $(document).ready(() => {
    $('#updateForm').submit(function (e) {
      e.preventDefault();
      const ctFromEditor = CKEDITOR.instances.editor1.getData();
      let formData = $(this).serialize();
      formData += '&contents=' + ctFromEditor;
      const actionUrl = $(this).attr('action');
      // $.ajax({
      //   type: 'patch',
      //   url: `/${actionUrl}`,
      //   data: formData,
      // }).done(function () {
      //   window.location.replace('http://localhost:3000/admin/blogs');
      // });
      axios
        .patch(`/${actionUrl}`, formData)
        .then(window.location.replace('http://localhost:3000/admin/blogs'))
        .catch(function (error) {
          console.log(error);
        });
    });
  });
</script>
